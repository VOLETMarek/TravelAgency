<%- include('../partials/head') %>
<%- include('../partials/header') %>
<main class="bg-light">
  <h1 class="text-center py-4">Liste des Activités</h1>
  <div class="table-responsive mx-4">
    <table class="table mb-0 table-bordered">
      <thead class="thead-light">
        <tr>
          <th scope="col">id</th>
          <th scope="col">Name</th>
          <th scope="col">Location</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
          <th scope="col">Start Date</th>
          <th scope="col">End Date</th>
          <th scope="col">Duration</th>
          <th scope="col">Détails</th>
          <th scope="col">Modifier</th>
          <th scope="col">Supprimer</th>
        </tr>
      </thead>
      <tbody>
        <% activities.forEach((activity)=> { %>
        <tr>
          <th scope="row"><%= activity.id %></th>
          <td><%= activity.name %></td>
          <td><%= activity.location %></td>
          <td><%= activity.description %></td>
          <td><%= activity.price %>€</td>
          <td><img src="<%= activity.image %>"></td>
          <td><%= activity.start_date.toLocaleString('fr-FR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %>h</td>
          <td><%= activity.end_date.toLocaleString('fr-FR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %>h</td>
          <td><%= activity.duration %></td>
          <td><a class="btn btn-primary" href="#" role="button">Détails</a></td>
          <td><a class="btn btn-primary" href="#" role="button">Modifier</a></td>
          <td><a class="btn btn-primary" href="#" role="button">Supprimer</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</main>
<%- include('../partials/footer') %>