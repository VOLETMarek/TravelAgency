<%- include('../../partials/head') %>
<%- include('../../partials/header') %>
<main class="bg-light">
  <div class="container py-4">
    <h1 class="text-center py-4">Update Activity</h1>
    <div>
      <% if (success && success.length > 0) { %>
      <div class="alert alert-success" role="alert">
        <%= success %>
      </div>
      <% } %>
      <% if (error && error.length > 0) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
      <% } %>
    </div>
    <form class="px-4" action="/backoffice/activity-update/<%= activity.id %>" method="POST">
      <div class="form-group mb-4">
        <label for="name" class="mb-2">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name" value="<%= activity.name %>" required>
      </div>
      <div class="form-group mb-4">
        <label for="location" class="mb-2">Location</label>
        <input type="text" class="form-control" id="location" placeholder="Enter Location" name="location" value="<%= activity.location %>" required>
      </div>
      <div class="form-group mb-4">
        <label for="description" class="mb-2">Description</label>
        <textarea class="form-control" id="description" placeholder="Enter Description" name="description" required><%= activity.description %></textarea>
      </div>
      <div class="form-group mb-4">
        <label for="price" class="mb-2">Price</label>
        <input type="number" class="form-control" id="price" placeholder="Enter Price" name="price" value="<%= activity.price %>" required>
      </div>
      <div class="form-group mb-4">
        <label for="image" class="mb-2">Image URL</label>
        <input type="text" class="form-control" id="image" placeholder="Enter Image URL" name="image" value="<%= activity.image %>" required>
      </div>
      <div class="form-group mb-4">
        <label for="start_date" class="mb-2">Start Date</label>
        <input type="datetime-local" class="form-control" id="start_date" placeholder="Enter Start Date" name="start_date" value="<%= activity.start_date %>" required>
      </div>
      <div class="form-group mb-4">
        <label for="end_date" class="mb-2">End Date</label>
        <input type="datetime-local" class="form-control" id="end_date" placeholder="Enter End Date" name="end_date" value="<%= activity.end_date %>" required>
      </div>
      <div class="form-group mb-4">
        <label for="duration" class="mb-2">Duration</label>
        <input type="time" class="form-control" id="duration" name="duration" required>
      </div>
      <div class="form-group mb-4">
        <label for="rate" class="mb-2">Rate</label>
        <input type="number" class="form-control" id="rate" placeholder="Enter Rate" name="rate" min="1" max="5" step="0.1" value="<%= activity.rate %>" required>
      </div>
      <button type="submit" class="btn btn-primary mb-4">Submit</button>
    </form>
  </div>
</main>
<%- include('../../partials/footer') %>