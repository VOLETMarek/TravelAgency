<%- include('../partials/head') %>
<%- include('../partials/header') %>
<main class="bg-light text-center">
  <h1 class="text-center py-4">Hotel List</h1>
  <a class="btn btn-primary mb-4" href="#" role="button">Créate hotel</a>
  <div class="table-responsive mx-4">
    <table class="table mb-0 table-bordered">
      <thead class="thead-light">
        <tr>
          <th scope="col">id</th>
          <th scope="col">Name</th>
          <th scope="col">Location</th>
          <th scope="col">Available rooms</th>
          <th scope="col">Price per night</th>
          <th scope="col">Image</th>
          <th scope="col">Start Date</th>
          <th scope="col">End Date</th>
          <th scope="col">Duration</th>
          <th scope="col">Détails</th>
          <th scope="col">Modifier</th>
          <th scope="col">Supprimer</th>
        </tr>
      </thead>
      <tbody>
        <% hotels.forEach((hotel)=> { %>
        <tr>
          <th scope="row"><%= hotel.id %></th>
          <td><%= hotel.name %></td>
          <td><%= hotel.location %></td>
          <td><%= hotel.available_rooms %></td>
          <td><%= hotel.price_per_night %>€</td>
          <td><img src="<%= hotel.image %>"></td>
          <td><%= hotel.start_date.toLocaleString('fr-FR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %>h</td>
          <td><%= hotel.end_date.toLocaleString('fr-FR', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', hour: 'numeric', minute: 'numeric' }) %>h</td>
          <td><%= hotel.duration %></td>
          <td><a class="btn btn-primary" href="#" role="button">Details</a></td>
          <td><a class="btn btn-primary" href="#" role="button">Update</a></td>
          <td><a class="btn btn-primary" href="#" role="button">Delete</a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</main>
<%- include('../partials/footer') %>