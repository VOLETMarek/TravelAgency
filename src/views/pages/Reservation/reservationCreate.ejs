<%- include('../../partials/head') %>
<%- include('../../partials/header') %>
<main class="bg-light">
  <h1 class="text-center py-4">Create Reservation</h1>
  <div>
    <% if (success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
      <%= success %>
    </div>
    <% } %>
    <% if (error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
    <% } %>
  </div>
  <form class="px-4" action="/backoffice/reservation-create" method="POST">
    <div class="form-group mb-4">
      <label for="total_price" class="mb-2">Total Price</label>
      <input type="number" step="0.01" class="form-control" id="total_price" placeholder="Enter Total Price" name="total_price" required>
    </div>
    <div class="form-group mb-4">
      <label for="user_id" class="mb-2">User ID</label>
      <input type="number" class="form-control" id="user_id" placeholder="Enter User ID" name="user_id" required>
    </div>
    <div class="form-group mb-4">
      <label for="flight_id" class="mb-2">Flight ID</label>
      <input type="number" class="form-control" id="flight_id" placeholder="Enter Flight ID" name="flight_id" required>
    </div>
    <div class="form-group mb-4">
      <label for="activity_id" class="mb-2">Activity ID</label>
      <input type="number" class="form-control" id="activity_id" placeholder="Enter Activity ID" name="activity_id" required>
    </div>
    <div class="form-group mb-4">
      <label for="hotel_id" class="mb-2">Hotel ID</label>
      <input type="number" class="form-control" id="hotel_id" placeholder="Enter Hotel ID" name="hotel_id" required>
    </div>
    <div class="form-group mb-4">
      <label for="date" class="mb-2">Date</label>
      <input type="datetime-local" class="form-control" id="date" placeholder="Enter Date" name="date" required>
    </div>
    <button type="submit" class="btn btn-primary mb-4">Submit</button>
  </form>
</main>
<%- include('../../partials/footer') %>